{% extends 'TnqsoftDemoBundle:Layout:layout.html.twig' %}
{##############################################################################}
{% block body %}
    <div class="page-header">
        <h1>Author
            <small>List</small>
        </h1>
    </div>

    <p>
        {{ link_button({
            'text': 'Add New',
            'href': path('admin_author_new'),
            'class': 'success',
            'icon': 'plus',
        }) }}
    </p>

    {{ flash_message() }}

    {{ table_start({ id: 'tableDemo' }) }}
        {{ table_head({
            class: 'info',
            columns: [
                {
                    width: '30%',
                    label: 'Name',
                    field: 'name'
                },
                {
                    width: '30%',
                    label: 'Description',
                    field: 'description'
                },
                {
                    width: '15%',
                    label: 'Createdat',
                    field: 'createdAt'
                },
                {
                    width: '15%',
                    label: 'Updatedat',
                    field: 'updatedAt'
                },
                {
                    width: '1%',
                    label: '<i class="fa fa-key"></i>',
                    field: 'id',
                    nowrap: true
                },
                {
                    width: '9%',
                    label: ''
                },
            ]
        }) }}
        <tbody>
        {% if paginator|length > 0 %}
        {% for entity in paginator %}
            <tr>
                <td><a href="{{ path('admin_author_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                    {{ link_button({
                        'text': '',
                        'href': path('admin_author_show', { 'id': entity.id }),
                        'class': 'primary',
                        'icon': 'eye',
                        'attr': 'data-toggle="tooltip" data-placement="top" title="Detail"'
                    }) }}
                    {{ link_button({
                        'text': '',
                        'href': path('admin_author_edit', { 'id': entity.id }),
                        'class': 'info',
                        'icon': 'pencil',
                        'attr': 'data-toggle="tooltip" data-placement="top" title="Edit"'
                    }) }}
                </td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    {{ table_end() }}

    {{ pagination({ paginator: paginator }) }}

{% endblock %}
