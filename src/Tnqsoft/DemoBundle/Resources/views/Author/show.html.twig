{% extends 'TnqsoftDemoBundle:Layout:layout.html.twig' %}
{##############################################################################}
{% block javascripts %}
    <script src="{{ asset('bundles/tnqsoftdemo/js/script.js') }}"></script>
{% endblock %}
{##############################################################################}
{% block body %}
    <div class="page-header">
        <h1>Author
            <small>Detail</small>
        </h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-3 text-right">Name: </div>
                <div class="col-sm-9">{{ entity.name }}</div>
            </div>
            <div class="row">
                <div class="col-sm-3 text-right">Description: </div>
                <div class="col-sm-9">{{ entity.description }}</div>
            </div>
            {% if entity.createdAt %}
            <div class="row">
                <div class="col-sm-3 text-right">Created At: </div>
                <div class="col-sm-9">{{ entity.createdAt|date('Y-m-d H:i:s') }}</div>
            </div>
            {% endif %}
            {% if entity.updatedAt %}
            <div class="row">
                <div class="col-sm-3 text-right">Updated At: </div>
                <div class="col-sm-9">{{ entity.updatedAt|date('Y-m-d H:i:s') }}</div>
            </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
