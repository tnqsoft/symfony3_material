<a href="{{ path(actionEdit, {'id': record.id }) }}" class="btn btn-info btn-sm btn-flat" data-toggle="tooltip" data-placement="top" title="Sửa">
    <i class="fa fa-pencil"></i>
</a>
{% if record.isLocked is not defined or record.isLocked == false %}
    {% if (alwayshow is not defined or alwayshow == true) %}
    <a href="{{ path(actionDelete, {'id': record.id }) }}" class="btn btn-danger btn-sm btn-link-delete btn-flat" data-toggle="tooltip" data-placement="top" title="Xóa">
        <i class="fa fa-trash-o"></i>
    </a>
    {% endif %}
{% endif %}
