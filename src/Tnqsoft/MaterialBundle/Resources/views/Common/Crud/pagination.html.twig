{% if paginator|length > 0 %}
<div class="clearfix pagination-box">
    <div class="col-xs-12 col-sm-6">
        <p class="text-muted">
            Hiển thị {{ paginator.startRecord }} đến {{ paginator.endRecord }} trên {{ paginator.totalRecord }} bản ghi
        </p>
    </div>
    <div class="col-xs-12 col-sm-6">
        {% if paginator.totalPage > 1 %}
            {% if params is defined %}
            {% set allParam = app.request.query.all|merge(params) %}
            {% else %}
            {% set allParam = app.request.query.all %}
            {% endif %}
            <nav class="pull-right">
                <ul class="pagination pagination-sm no-margin pull-right">
                    {# PREVIOUS BUTTON #}
                    {% if paginator.page > 1 %}
                        <li>
                            <a href="{{ path(route, allParam|merge({'page': paginator.prevPage})) }}">
                                <i class="fa fa-long-arrow-left"></i>
                            </a>
                        </li>
                    {% else %}
                        <li class="disabled">
                            <a href="#">
                                <i class="fa fa-long-arrow-left"></i>
                            </a>
                        </li>
                    {% endif %}

                    {# PAGE BUTTON #}
                    {% for i in 1..paginator.totalPage %}
                        <li {% if i == paginator.page  %}class="active"{% endif %}>
                            <a href="{{ path(route, allParam|merge({'page': i})) }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {# NEXT BUTTON #}
                    {% if paginator.page < paginator.totalPage %}
                        <li>
                            <a href="{{ path(route, allParam|merge({'page': paginator.nextPage})) }}">
                                <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </li>
                    {% else %}
                        <li class="disabled">
                            <a href="#">
                                <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    </div>
</div>
{% endif %}
