<div class="avatar-box">
  <p class="text-center">
    {% if file != '' %}
      <img src="{{ asset(folder ~ file) }}" alt="{{ title }}" class="img-rounded user-avatar-display" width="150">
    {% else %}
      <img src="{{ defaultImg }}" alt="{{ title }}" class="img-rounded user-avatar-display" width="150">
    {% endif %}
  </p>
  <p class="text-center">
    <button type="button" class="btn btn-xs btn-primary btn-uploading" id="btnUploadAvatar">
      <span class="state-normal"><i class="fa fa-upload"></i> Thay ảnh</span>
      <span class="state-uploading"><i class="fa fa-circle-o-notch fa-spin fa-fw"></i> Đang tải(<i class="upload-percent">10</i>%)</span>
    </button>
    <button type="button" class="btn btn-xs btn-danger {% if file == '' %}hidden{% endif %}" id="btnDeleteAvatar">
      <i class="fa fa-remove"></i>
    </button>
  </p>
  <div class="text-danger text-center" id="boxUploadAvatarError"></div>
</div>
